<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>My Coins</title>
    </head>
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface" ifconfig="coins/general/active" name="customer-account-navigation-coin-link"
                   template="Kirill_Coins::сoins.phtml"/>
            <arguments>
                <argument name="path" xsi:type="string">coins/history</argument>
                <argument name="label" xsi:type="string" translate="true">coins</argument>
                <argument name="sortOrder" xsi:type="number">240</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
